extends layout

block content

  div.info#project
    div.row
      div.col-lg-4.col-xs-12.project-list
        - var n = 0;
          div.btn-group-vertical.btn-block(role="group")
            each val in data
              div.btn.btn-default.btn-block.project-btn(onclick="populateProject("+n+")")= val.title
              - n++;
      div.col-lg-8.col-xs-12
        div.well
          h2#project-title= data[0].title
          p#project-subtitle= data[0].subtitle
          div#project-media
          p#project-description= data[0].description
          a#project-link(href=data[0].projectLink) See Project 

  div.space

